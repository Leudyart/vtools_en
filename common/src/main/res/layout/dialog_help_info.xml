<?xml version="1.0" encoding="utf-8"?>
<com.omarea.common.ui.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:layout_marginTop="6dp"
            android:paddingBottom="16dp"
            android:background="@drawable/confirm_dialog_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_help_title"
                style="@style/dialogTitle"
                android:text="提示信息" />
            <TextView
                android:id="@+id/dialog_help_info"
                style="@style/dialogDesc"
                android:text="提示内容" />

            <FrameLayout
                android:id="@+id/confirm_custom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_confirm"
                style="@style/dialogCancelBtn"
                android:layout_marginEnd="8dp"
                android:text="我知道了">
            </Button>
        </LinearLayout>

    </LinearLayout>
</com.omarea.common.ui.OverScrollView>