<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_app_bar"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.omarea.common.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/cpu_mode_outside"
                style="@style/ListCardItem"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Using external configuration (/data/powercfg.sh)\nIf you need to change back to Scene3's own configuration, or import the configuration through Scene, please click the delete button on the right"
                    android:textSize="13dp" />

                <ImageButton
                    android:id="@+id/cpu_mode_delete_outside"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text = "Configuration Source / Author:" />

                    <TextView
                        android:id="@+id/config_author"
                        style="@style/textDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="?android:colorAccent" />

                    <ImageButton
                        android:id="@+id/config_author_icon"
                        android:src="@drawable/source_switch"
                        android:scaleType="centerInside"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="5dp"
                        android:background="@null"
                        android:tint="?android:colorAccent"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_powersave"
                        android:id="@+id/cpu_config_p0"
                        style="@style/InCardListItem"
                        android:layout_marginEnd="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:src="@drawable/mode_powersave" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/powersave" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Elderly people call the experts" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_balance"
                        android:id="@+id/cpu_config_p1"
                        style="@style/InCardListItem"
                        android:layout_marginStart="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_balance" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/balance" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Slow down, the world is pleasing to the eye" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_performance"
                        android:layout_marginEnd="4dp"
                        android:id="@+id/cpu_config_p2"
                        style="@style/InCardListItem"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_performance" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/performance" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Play and suppress the game" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_fast"
                        android:id="@+id/cpu_config_p3"
                        android:layout_marginStart="4dp"
                        style="@style/InCardListItem"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="9dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_fast" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/fast" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="happiness is always short" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quick_switch"
                style="@style/ListCardItem"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/home_quick_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Quick switch" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display the four mode switch buttons on the home page of the application (Scene)" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/dynamic_control"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="dynamic response" />

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="After activating [Scene Mode], the mode can be automatically switched according to the foreground application" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_control_opts"
                    android:background="@drawable/in_card_item"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="Apps that do not have a separate setting mode will use this mode by default.\n\nIf you need to set a mode for an application separately, please return to the previous page and enter the 'application scenario'." />

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="global default" />

                        <Spinner
                            android:id="@+id/first_mode"
                            style="@style/SceneSpinner"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:entries="@array/default_powercfg_mode_options"
                            android:paddingRight="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="Under normal circumstances, Scene will minimize mode switching as much as possible.\n\nFor example: Switching back and forth before several applications that are also in the ~power saving mode~ will not repeat the mode switching code\n \nUnless you find that every time you switch applications, the scheduling parameters will be reset by the system, then you need to turn on this option~" />

                        <Switch
                            android:id="@+id/strict_mode"
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="repeated execution" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="After the foreground application changes, delay 5s before performing the scheduling mode switch" />

                        <Switch
                            android:id="@+id/delay_switch"
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Delayed switching" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.omarea.common.ui.OverScrollView>
</RelativeLayout>
