<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout style="@style/ListCardItem">

        <LinearLayout
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp">


            <com.omarea.ui.HelpIcon
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Cpuset is used to set the CPU cores available to processes in different states. Assigning fewer CPU cores to background processes ensures that foreground processes can still run smoothly when there are too many in the background, but it can also cause a single core to be constantly full, or download speed to slow down significantly when downloading tools are in the background." />

            <TextView
                android:id="@+id/cluster_title"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="Minimum frequency" />

        <TextView
            android:id="@+id/cluster_min_freq"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Min Freq"
            android:textAlignment="textEnd" />

        <TextView

            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="Maximum frequency" />

        <TextView
            android:id="@+id/cluster_max_freq"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Max Freq"
            android:textAlignment="textEnd" />

        <TextView

            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="Scheduling Mode" />

        <TextView
            android:id="@+id/cluster_governor"
            android:layout_width="150dp"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Governor"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="Fine-tuning parameters" />

        <TextView
            android:id="@+id/cluster_governor_params"
            android:layout_width="150dp"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Click to view"
            android:textAlignment="textEnd" />

    </GridLayout>
</FrameLayout>
